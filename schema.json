{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SekaiTranslator Prompt",
  "type": "object",
  "required": ["schema_version", "id", "name", "text"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_\\-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "text": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "max_length": {
          "type": "integer"
        }
      }
    }
  },
  "additionalProperties": false
}
